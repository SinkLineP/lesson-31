<h2>Barber page:</h2>
<p>Name: <%= @barbers.name %></p>

<% @comments.each do |comment| %>
	<p><%= comment.email %></p>
	<p><%= comment.body %></p>
	<p><%= comment.created_at %></p>
<% end %>
<br>

<form action="/comment/<%= @barbers.id %>" method="POST" role="form">
    <div class="form-group">
    	<label for="exampleFormControlInput1">Email address</label>
    	<input name="comment[email]" type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" value="<%= @username %>">
    </div>
	<div class="form-group">
		<label for="exampleFormControlTextarea1"><h3>Create comment:</h3></label>
    	<textarea name="comment[body]" class="form-control" id="exampleFormControlTextarea1" rows="3" value="<%= @phone %>"></textarea>
  	</div>
  
    	<button type="submit" class="btn btn-primary">Submit</button>
</form>